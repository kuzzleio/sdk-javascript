{
  "ignorePatterns": ["doc/**"],
  "plugins": ["kuzzle"],
  "extends": ["plugin:kuzzle/default", "plugin:kuzzle/node"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "sort-keys": "off",
    "kuzzle/array-foreach": "off",
    "no-console": "off",
    "func-names": "off",
    "new-cap": "off"
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": ["plugin:kuzzle/typescript"]
    }
  ]
}
